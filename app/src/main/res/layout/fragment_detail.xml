<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.characterdetail.view.DetailFragment">

    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_detail_250"
        android:scaleType="fitXY"
        android:src="@drawable/rick_morty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvDetailCharacterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/char_name"
        android:textSize="@dimen/text_detail_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginStart="@dimen/size_30"
        app:layout_constraintTop_toBottomOf="@id/ivDetailImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDetailCharacterStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/char_name"
        android:textSize="@dimen/text_detail_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_30"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCharacterName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDetailCharacterSpecie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/char_name"
        android:textSize="@dimen/text_detail_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_30"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCharacterStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDetailCharacterGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/char_name"
        android:textSize="@dimen/text_detail_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_30"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCharacterSpecie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/icon_40"
        android:layout_height="@dimen/icon_40"
        android:src="@drawable/ic_disfavor"
        app:layout_constraintTop_toBottomOf="@id/ivDetailImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>